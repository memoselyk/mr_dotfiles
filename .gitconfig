[user]
# git config -f ~/.gitconfig.local user.name John Due
# git config -f ~/.gitconfig.local user.email me@example.com

[include]
	path = ~/.gitconfig.local

[core]
	editor = vim
	pager = less -FX
[alias]
	a = add
	ap = add --patch
	au = add -u
	b = branch
	c = commit
	ca = commit --amend -C HEAD
	cm = commit -m
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	ff = merge --ff-only
	ls = log --oneline
	sb = show-branch
	st = status
[credential]
	helper = cache --timeout=3600
[push]
	default = simple
